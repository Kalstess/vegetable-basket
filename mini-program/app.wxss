page {
	background: #f5f6f7;
}
.page-padding {
	padding: 16rpx 24rpx;
	box-sizing: border-box;
}
.card {
	background: #fff;
	border-radius: 12rpx;
	box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.04);
	padding: 24rpx;
	margin-bottom: 24rpx;
}
.btn {
	background: #1677ff;
	color: #fff;
	border-radius: 8rpx;
	padding: 20rpx;
	text-align: center;
}
.btn-secondary {
	background: #f0f0f0;
	color: #333;
}
.form-label {
	font-size: 28rpx;
	color: #333;
	margin: 16rpx 0 8rpx;
}
.form-input {
	background: #fff;
	border: 1rpx solid #e5e6eb;
	border-radius: 8rpx;
	padding: 20rpx;
}
.empty-tip {
	text-align: center;
	color: #999;
	padding: 60rpx 0;
}
.list-item {
	padding: 16rpx 0;
}
.list-item-title {
	font-size: 32rpx;
	font-weight: 600;
	color: #333;
	margin-bottom: 8rpx;
}
.list-item-desc {
	font-size: 26rpx;
	color: #666;
	margin-bottom: 4rpx;
}
.list-item-actions {
	display: flex;
	justify-content: flex-end;
	margin-top: 16rpx;
}
.section-title {
	font-size: 30rpx;
	font-weight: 600;
	color: #333;
	margin-bottom: 16rpx;
	padding-bottom: 12rpx;
	border-bottom: 1rpx solid #e5e6eb;
}
.stat-item {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 16rpx 0;
	border-bottom: 1rpx solid #f0f0f0;
}
.stat-label {
	font-size: 28rpx;
	color: #666;
	flex: 1;
}
.stat-value {
	font-size: 32rpx;
	font-weight: 600;
	color: #1677ff;
}
.btn-danger {
	background: #ff4d4f;
	color: #fff;
}
.btn-small {
	background: #1677ff;
	color: #fff;
	border-radius: 6rpx;
	padding: 12rpx 24rpx;
	font-size: 24rpx;
	text-align: center;
}
.dialog-mask {
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	background: rgba(0,0,0,0.5);
	display: flex;
	align-items: center;
	justify-content: center;
	z-index: 1000;
}
.dialog-content {
	background: #fff;
	border-radius: 12rpx;
	width: 90%;
	max-width: 600rpx;
	max-height: 80vh;
	display: flex;
	flex-direction: column;
}
.dialog-header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	padding: 24rpx;
	border-bottom: 1rpx solid #e5e6eb;
}



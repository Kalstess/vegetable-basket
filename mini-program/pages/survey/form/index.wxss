.steps {
	display: flex;
	align-items: center;
	justify-content: center;
	margin-bottom: 40rpx;
}

.step-item {
	width: 60rpx;
	height: 60rpx;
	border-radius: 50%;
	background: #e5e6eb;
	color: #999;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 24rpx;
}

.step-item.active {
	background: #1677ff;
	color: #fff;
}

.step-line {
	width: 60rpx;
	height: 2rpx;
	background: #e5e6eb;
	margin: 0 10rpx;
}

.problem-item {
	display: flex;
	align-items: center;
	padding: 20rpx;
	margin-bottom: 16rpx;
	border: 1rpx solid #e5e6eb;
	border-radius: 8rpx;
	background: #f5f6f7;
}

.problem-order {
	width: 40rpx;
	height: 40rpx;
	border-radius: 50%;
	background: #1677ff;
	color: #fff;
	display: flex;
	align-items: center;
	justify-content: center;
	font-size: 24rpx;
	margin-right: 20rpx;
}

.problem-text {
	flex: 1;
	font-size: 28rpx;
	color: #333;
}

.problem-actions {
	display: flex;
	gap: 10rpx;
}

.btn-group {
	display: flex;
	gap: 20rpx;
	margin-top: 40rpx;
}

.btn-group button {
	flex: 1;
}


<view class="page-padding">
  <view class="card" style="margin-bottom: 16rpx;">
    <view class="btn" bindtap="addNew">新增配送网点</view>
  </view>
  
  <view wx:if="{{list.length === 0}}" class="empty-tip">暂无配送网点</view>
  
  <view wx:for="{{list}}" wx:key="id" class="card" style="margin-bottom: 16rpx;">
    <view class="list-item">
      <view class="list-item-title">{{item.name}}</view>
      <view class="list-item-desc">类型：{{item.pointType}}</view>
      <view class="list-item-desc">地址：{{item.address || '未填写'}}</view>
      <view wx:if="{{item.vehiclePlateNumber}}" class="list-item-desc">车辆：{{item.vehiclePlateNumber}}</view>
      <view wx:if="{{item.contactPerson}}" class="list-item-desc">联系人：{{item.contactPerson}} {{item.contactPhone}}</view>
      <view class="list-item-actions">
        <view class="btn btn-secondary" style="padding: 8rpx 16rpx; margin-right: 12rpx;" bindtap="edit" data-id="{{item.id}}">编辑</view>
        <view class="btn btn-danger" style="padding: 8rpx 16rpx;" bindtap="delete" data-id="{{item.id}}">删除</view>
      </view>
    </view>
  </view>
</view>

